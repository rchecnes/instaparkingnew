<%- model_class = Favorite -%>
<div class="page-header">
  <h1>Mis Favoritos</h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Usuario</th>
      <th>Direcci√≥n</th>
      <th>Distrito</th>
      <th>Estacionamiento</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.id %></td>
        <td><%= favorite.name %></td>
        <td><%= favorite.user.first_name %></td>
        <td><%= favorite.place.address %></td>
        <td><%= favorite.place.district.name %></td>
        <td><%= image_tag favorite.place.url_image, :width=>"100", :height=>"80" %></td>
        <td>
          <!--<%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_favorite_path(favorite), :class => 'btn btn-default btn-xs' %>-->
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      favorite_path(favorite),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

