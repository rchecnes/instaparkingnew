<%= simple_form_for @menu, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@menu[:name]) %>
  <%= f.input :description %>
  <%= error_span(@menu[:description]) %>
  <%= f.input :flag %>
  <%= error_span(@menu[:flag]) %>
  <%= f.input :icon %>
  <%= error_span(@menu[:icon]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                menus_path, :class => 'btn btn-default' %>
<% end %>
